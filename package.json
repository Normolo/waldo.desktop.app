{
  "main": "public/electron.js",
  "homepage": "./",
  "name": "waldo",
  "version": "0.1.0",
  "license": "MPL-2.0",
  "description": "WALDO Desktop Application",
  "author": "WALDO",
  "build": {
    "icon": "logo.png",
    "asar": true,
    "appId": "com.waldo.vision",
    "productName": "WALDO Desktop",
    "copyright": "Copyright Â© year WALDO",
    "win": {
      "target": [
        "nsis"
      ],
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false,
      "allowElevation": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "WALDO Desktop",
      "license": "LICENSE.md",
      "artifactName": "WALDO Desktop Installer.exe",
      "deleteAppDataOnUninstall": true,
      "installerIcon": "logo.ico",
      "runAfterFinish": true,
      "uninstallerIcon": "ulogo.ico",
      "uninstallDisplayName": "WALDO Desktop Uninstaller"
    }
  },
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none yarn run react:start\" \"wait-on http://localhost:3000 && electron .\"",
    "dev": "concurrently \"cross-env BROWSER=none yarn run react:start\" \"wait-on http://localhost:3000 && electron .\"",
    "react:start": "craco start",
    "react:build": "craco build",
    "electron:start": "electron .",
    "build:win": "yarn run react:build && yarn run electron-builder --win",
    "release:win": "yarn run react:build && yarn run build:win --publish=always",
    "lint": "eslint src --fix"
  },
  "dependencies": {
    "@craco/craco": "^6.2.0",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.3.0",
    "@mui/material": "^5.2.6",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.3",
    "electron-store": "^8.0.1",
    "electron-updater": "^4.6.1",
    "express": "^4.17.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.1.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.0.0",
    "concurrently": "^6.2.1",
    "electron": "^14.0.0",
    "electron-builder": "^22.14.5",
    "eslint-config-airbnb": "^19.0.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.1",
    "postcss": "^8.2.13",
    "prettier": "^2.5.1",
    "tailwindcss": "yarn:@tailwindcss/postcss7-compat",
    "wait-on": "^6.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/waldo-vision/waldo.desktop.app.git",
    "vPrefixTagName": true
  }
}
